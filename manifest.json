{
  "name": "myweather",
  "version": "1.0",
  "description": "Personalized Weather Application",
  "permissions": ["activeTab", "storage", "geolocation"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "images/sunny16.png"
  },
  "options_page": "options.html",
  "manifest_version": 2
}
